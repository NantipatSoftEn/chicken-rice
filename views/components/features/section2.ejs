<div class="row">
    <div class="col-md-8">
        <h2 class="heading" id="a1">เมนูเด็ดประจำร้าน</h2>
        <hr class="heading_space"/>
        <div class="slider_wrap">
            <div id="service-slider" class="owl-carousel">  
                <% for(var i=0; i<foodshot.length; i++) {%>
                    <div class="item">
                        <div class="item_inner">
                            <div class="image">
                                <img src='<%= foodshot[i].image%>' alt="Services Image"/>
                                <a href="#"></a>
                            </div>
                            <h3>
                                <a href="#"><%=foodshot[i].name%></a>
                            </h3>
                            <p><%=foodshot[i].price%> บาท</p>
                        </div>
                    </div>
                <% } %>
            </div>

        </div>
    </div>
    <div class="col-md-4">
        <h2 class="heading">เมนูของเรา</h2>
        <hr class="heading_space"/>
        <ul class="menu_widget">
            <% for(var i=0; i<foods.length; i++) {%>
                <li>
                    <%= foods[i].name%>
                    <span><%=foods[i].price %>
                        บาท</span>
                </li>

            <% } %>

        </ul>
        <h3></h3>

    </div>
</div>